frase = input('Digite uma frase qualquer: ').strip().lower().replace(' ', '')

def verificacao_palindromo(txt):
  #Vou ter que usar fatiamento de strings aqui! string[início:fim:passo] --> SE VC COLOCAR [::1], o começa no início, termina no fim da string, e o passo é 1.
  #Se eu colocar [::-1], ele começa no início da string, mas vai indo de trás para frente.
  if(txt[::1] == txt[::-1]):
    print('A frase é um palíndromo.')
  else:
    print('A frase não é um palíndromo')

verificacao_palindromo(frase)
