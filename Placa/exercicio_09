#Ler os seis números inteiros:
numeros = []
pergunta_numeros = ''
contagem_numeros = 0

while(contagem_numeros < 6):
  pergunta_numeros = int(input('Digite um número: '))
  numeros.append(pergunta_numeros)
  contagem_numeros = contagem_numeros + 1

soma_pares = 0
for i in numeros:
  if(i % 2 == 0):
    soma_pares = soma_pares + i

print('A soma dos valores pares é: ', soma_pares)
